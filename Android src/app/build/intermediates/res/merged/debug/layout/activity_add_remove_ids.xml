<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_remove_layout"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.jerusalem_open_house.let_it_know.letitknow.add_remove_ids">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="382dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/lit1" />

    <Button
        android:id="@+id/add_remove_exit"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|left"
        android:background="@drawable/button_test"
        android:text="חזור"
        android:textColor="@color/caldroid_black" />

    <Button
        android:id="@+id/add_remove_manage_users"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/add_remove_editText"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/add_remove_submit_url"
        android:background="@drawable/button_test"
        android:text="הגדרות משתמשים"
        android:textColor="@color/caldroid_black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/add_remove_add_manual"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/add_remove_editText"
        android:layout_toEndOf="@+id/add_remove_facebook"
        android:background="@drawable/button_test"
        android:textColor="@color/caldroid_black"
        tools:text="הזן ארוע ידנית" />

    <EditText
        android:id="@+id/add_remove_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_remove_exit"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/add_remove_submit_url"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/add_remove_delete"
        android:ems="10"
        android:inputType="text"
        android:digits="0123456789*,qwertzuiopasdfghjklyxcvbnmאבגדהוזחטיכלמנסעפצקרשת!@#$%^()[]-."
       />

    <Button
        android:id="@+id/add_remove_submit_url"
        android:layout_width="45dp"
        android:layout_height="55dp"
        android:layout_above="@+id/add_remove_add_manual"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/add_remove_google"
        android:layout_alignTop="@+id/add_remove_editText"
        android:layout_toEndOf="@+id/add_remove_delete"
        android:background="@drawable/button_test"
        android:text="עדכן את עמוד הבית שלי"
        android:textColor="@color/caldroid_black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/tableLayout3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"><![CDATA[



            />


        />



        />







    ]]></TableLayout>

    <TextView
        android:id="@+id/add_remove_by"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/add_remove_submit_url"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/add_remove_status"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/add_remove_by"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_remove_by" />

    <Button
        android:id="@+id/add_remove_delete"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:layout_below="@+id/add_remove_status"
        android:layout_centerHorizontal="true"

        android:background="@drawable/button_test"
        android:text="מחק"
        android:textColor="@color/caldroid_black"
        android:visibility="invisible" />

    <Button
        android:id="@+id/add_remove_facebook"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/add_remove_delete"
        android:background="@drawable/button_test"
        android:text="Facebook"
        android:textColor="@color/caldroid_black" />

    <Button
        android:id="@+id/add_remove_google"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/add_remove_facebook"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_test"
        android:text="Google Calendar"
        android:textColor="@color/caldroid_black" />

    <TextView
        android:id="@+id/add_remove_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_remove_editText"
        android:layout_alignStart="@+id/add_remove_add_manual"
        android:layout_toStartOf="@+id/add_remove_submit_url" />

    <ImageView
        android:id="@+id/add_remove_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_remove_url"
        android:layout_alignEnd="@+id/add_remove_url"
        android:layout_alignStart="@+id/add_remove_url"
        android:layout_below="@+id/add_remove_google"
        android:visibility="invisible"
        app:srcCompat="@drawable/com_facebook_button_icon_blue" />

    <Button
        android:id="@+id/add_remove_notification"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/add_remove_submit_url"
        android:layout_toEndOf="@+id/add_remove_editText"
        android:background="@drawable/button_test"
        android:text="הגדרת התראות"
        android:textColor="@color/caldroid_black"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_remove_google"
        android:layout_alignEnd="@+id/add_remove_facebook"
        android:layout_alignParentStart="true"
        android:text="הוסף עמוד"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הוסף ארועים מ"
        android:textAlignment="center"
        android:layout_above="@+id/add_remove_google"
        android:layout_alignEnd="@+id/tableLayout3" />

    <Spinner
        android:id="@+id/add_remove_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/add_remove_status"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_weight="0.08"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2" />


</RelativeLayout>
