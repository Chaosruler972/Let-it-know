<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.jerusalem_open_house.let_it_know.letitknow.Display_event_data">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="382dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/lit1" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="86dp" />


    <TextView
        android:id="@+id/display_location"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/display_name"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/display_start"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/display_location"
        android:layout_alignStart="@+id/display_location"
        android:layout_below="@+id/display_location" />

    <TextView
        android:id="@+id/display_end"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/display_start"
        android:layout_alignStart="@+id/display_start"
        android:layout_below="@+id/display_start" />

    <TextView
        android:id="@+id/display_URL"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/display_end"
        android:layout_below="@+id/display_end"
        android:textColorLink="@android:color/holo_blue_dark" />

    <Button
        android:id="@+id/display_back"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/display_URL"
        android:background="@drawable/button_test"
        android:text="חזור"
        android:textColor="@color/caldroid_black" />

    <TextView
        android:id="@+id/display_by"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/display_end"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/display_URL" />


</RelativeLayout>
